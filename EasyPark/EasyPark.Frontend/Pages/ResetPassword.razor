@page "/reset-password"
<MudPaper Class="pa-6 mx-auto mt-12" Width="400px" Elevation="4" Rounded="true">
    <MudText Typo="Typo.h5" Class="mb-4" Align="Align.Center">
        Restablecer Contraseña
    </MudText>

    <MudTextField T="string"
                  Label="Nueva contraseña"
                  InputType="InputType.Password"
                  Margin="Margin.Dense"
                  FullWidth="true" />

    <MudTextField T="string"
                  Label="Confirmar contraseña"
                  InputType="InputType.Password"
                  Margin="Margin.Dense"
                  FullWidth="true" />

    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               Class="mt-4"
               FullWidth="true">
        Restablecer
    </MudButton>
</MudPaper>
