@page "/login"
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations

<MudGrid Justify="Justify.Center" style="height:-50vh; padding-top:100px">
    <MudItem xs="12" sm="7" md="4">
        <MudPaper Class="pa-4">
            <MudForm>
                <div class="d-flex justify-center mb-4">
                    <MudImage Src="Pictures/logo.jpg" Width="190" Height="177" />
                </div>
            </MudForm>
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudTextField T="string" Label="Usuario"  RequiredError="El usuario es obligatorio!" />
           
                <MudTextField T="string" Label="Contraseña" RequiredError="La contraseña es obligatoria!" 
                              InputType="InputType.Password" />
                              
            </MudForm>

            <MudItem Class="mt-4">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Ingresar</MudButton>
            </MudItem>
        </MudPaper>
    </MudItem>

</MudGrid>
@code {
    bool success;
    string[] errors = { };
    MudForm form;

    private IEnumerable<string> PasswordStrength(string pw)
    {
        if (string.IsNullOrWhiteSpace(pw))
        {
            yield return "Password is required!";
            yield break;
        }
    }

}